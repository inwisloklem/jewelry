.regform
  &__form
    max-width: 300px

  &__name
  &__tel
    box-sizing: border-box
    margin-bottom: 10px
    padding: 0 25px
    width: 100%
    min-height: 48px
    outline: none
    border: 2px solid $tan
    border-radius: 0
    -webkit-appearance: none
    font(1.1em, 1.5, 200)
    transition: all 0.4s ease-in-out

    &:focus
      background-color: lighten($tan, 80%)
      
      transition: all 0.4s ease-in-out